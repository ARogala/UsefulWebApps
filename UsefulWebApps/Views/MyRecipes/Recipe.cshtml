@using UsefulWebApps.Models.MyRecipes
@{
    ViewData["Title"] = "My Recipes";
}

@model UsefulWebApps.Models.ViewModels.MyRecipes.RecipePageVM

<div class="list-buddy-index-container mx-auto">
    <h1 class="display-4">@Model.Recipe.RecipeTitle</h1>
    <p>@Model.Recipe.RecipeDescription</p>
    <p>Author: @Model.Recipe.UserName</p>
    <p>Coures: @Model.Recipe.Course.Course</p>
    <p>Cuisine: @Model.Recipe.Cuisine.Cuisine</p>
    <p>Difficulty: @Model.Recipe.Difficulty.Difficulty</p>
    <p>Prep Time: @Model.Recipe.PrepTime</p>
    <p>Cook Time: @Model.Recipe.CookTime</p>
    <p>Rating: @Model.Recipe.Rating</p>
    <p>Servings: @Model.Recipe.Servings</p>
    <section>
        <h2 class="display-6">Categories/Tags</h2>
        <ul class="list-group">
            @foreach (RecipeCategories category in Model.Recipe.Categories)
            {
                <li class="list-group-item">@category.Category</li>
            }
        </ul>
    </section>
    <h2 class="display-6">Ingredients</h2>
    <ingredients html-ingredients-content="@Model.Recipe.Ingredients"></ingredients>
    <h2 class="display-6">Instructions</h2>
    <instructions html-instructions-content="@Model.Recipe.Instructions"></instructions>
    @if(Model.Recipe.Notes != "")
    {
        <h2 class="display-6">Notes</h2>
        <notes html-notes-content="@Model.Recipe.Notes"></notes>
    }
    @if(Model.Recipe.Nutrition != "")
    {
        <h2 class="display-6">Nutrition</h2>
        <nutrition html-nutrition-content="@Model.Recipe.Nutrition"></nutrition>
    }
    
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div class="text-center">
            <div class="mt-2">
                <form method="post" asp-route="userSavedRecipe" id="userSavedRecipeForm">
                    <div class="form-floating">
                        <input type="hidden" asp-for="RecipeUserSaved.UserName" />
                        <input type="hidden" asp-for="RecipeUserSaved.UserId" />
                        <input type="hidden" asp-for="RecipeUserSaved.RecipeId" value="@Model.Recipe.RecipeId" />
                   
                    </div>
                    <div class="text-center">
                        <div class="mt-2">
                            <button class="btn btn-primary" type="submit">Save Recipe to my list</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="mt-2">
                <a class="btn btn-primary" asp-controller="MyRecipes" asp-action="EditRecipe" asp-route-id="@Model.Recipe.RecipeId">Edit Recipe</a>
            </div>
            <div class="mt-2">
                <a class="btn btn-primary" asp-controller="MyRecipes" asp-action="DeleteRecipe" asp-route-id="@Model.Recipe.RecipeId">Delete Recipe</a>
            </div>
            <div class="mt-2">
                <a asp-controller="MyRecipes" asp-action="Index" class="btn btn-primary">Back to Recipe List</a>
            </div>
        </div>
        <div>
            <section>
                @if (Model.RecipeComments.Count > 0)
                {
                    <h2 class="display-6">Comments</h2>
                }
                else
                {
                    <h2 class="display-6">Be the first to post a comment.</h2>
                }
                <ul class="list-group">
                    @foreach (RecipeComment comment in Model.RecipeComments)
                    {
                        <li class="list-group-item">
                            <p>
                                <strong>@comment.UserName</strong><br />
                                @comment.Comment
                            </p>
                        </li>
                    }
                </ul>
            </section>
            <form method="post" asp-route="postComment" id="postCommentForm">
                <div class="form-floating">
                    <input type="hidden" asp-for="RecipeComment.UserName" />
                    <input type="hidden" asp-for="RecipeComment.UserId" />
                    <input type="hidden" asp-for="RecipeComment.RecipeId" value="@Model.Recipe.RecipeId" />
                    <textarea asp-for="RecipeComment.Comment" class="form-control textarea-input ignore"></textarea>
                    <label asp-for="RecipeComment.Comment">Recipe Comment</label>
                </div>
                <div class="text-center">
                    <div class="mt-2">
                        <button class="btn btn-primary" type="submit">Post Comment</button>
                    </div>
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="text-center">
            
            <div class="mt-2">
                <a asp-controller="MyRecipes" asp-action="Index" class="btn btn-primary">Back to Recipe List</a>
            </div>
        </div>
        <section>
            @if (Model.RecipeComments.Count > 0)
            {
                <h2 class="display-6">Comments</h2>
            }
            <ul class="list-group">
                @foreach (RecipeComment comment in Model.RecipeComments)
                {
                    <li class="list-group-item">
                        <p>
                            <strong>@comment.UserName</strong><br />
                            @comment.Comment
                        </p>
                    </li>
                }
            </ul>
        </section>
    }
</div>

