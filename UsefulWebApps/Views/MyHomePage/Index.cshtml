@{

    ViewData["Title"] = "Custom Home Page";
}

@model UsefulWebApps.Models.ViewModels.MyHomePage.MyHomePageVM
<div class="container-fluid pb-3">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 pt-3">
            <div id="carouselFade" class="carousel carousel-dark slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for(int i = 0; i < Model.FilesToShow.Count; i++)
                    {
                        if(i==0)
                        {
                            <div class="carousel-item active" data-bs-interval="5000">
                                <img src="~/images/customhomepage/cityskylines/@Model.FilesToShow.ElementAt(i)" class="d-block w-100">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item" data-bs-interval="5000">
                                <img src="~/images/customhomepage/cityskylines/@Model.FilesToShow.ElementAt(i)" class="d-block w-100">
                            </div>
                        }
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="max-width-200 mx-auto pt-3">
                <div>
                    <a asp-controller="MyHomePage" asp-action="Index" class="btn btn-outline-dark w-100">Change Slide Show</a>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="date-time">
                <div id="time" class="date-time"></div>
                <div id="date" class="date-time"></div>
            </div>
            <div class="shortcuts">
                @{
                    var chunks = Model.ShortCutsToShow.Chunk(4);

                    for (int i = 0; i < chunks.Count(); i++) 
                    {
                        <div class="shortcuts__@i">
                            <ul>
                                @{
                                    var chunk = chunks.ElementAt(i);
                                    foreach(var icon in chunk)
                                    {

                                        <li>
                                            <a href="#" target="_blank" rel="noopener noreferrer">
                                                <img src="~/icons/@icon" class="logo" />
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    
</div>


@section Scripts {
    <script type="text/javascript" src="~/js/MyHomePage.js"></script>
}
