    ViewData["Title"] = "Select Slide Show";
}

<div class="max-width-700 mx-auto container pb-3">
    <form asp-controller="MyHomePage" asp-action="SelectSlideShow" method="post">
        <div>
            <h3 class="mt-3 text-center">Slide Show</h3>
            <p class="fs-7">Check the slideshow you want on your home page.</p>
            <ul class="list-group mt-3 choice-list">
                
                <li class="list-group-item list-group-item-action active">
                    slide show ck box options here
