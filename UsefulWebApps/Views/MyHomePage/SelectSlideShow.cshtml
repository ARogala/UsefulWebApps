@{

    ViewData["Title"] = "Select Slide Show";
}
@model UsefulWebApps.Models.ViewModels.MyHomePage.SelectSlideShowVM
<div class="max-width-700 mx-auto container pb-3">
    <form asp-controller="MyHomePage" asp-action="SelectSlideShow" method="post">
        <div>
            <h3 class="mt-3 text-center">Slide Show</h3>
            <p class="fs-7">Check the slideshow you want on your home page.</p>
            <ul class="list-group mt-3 choice-list">
                @for(int i = 0; i < Model.SlideShowFolders.Count; i++)
                {
                    <li class="list-group-item list-group-item-action active">
                        <input class="form-check-input me-1" type="radio" asp-for="SelectedSlideShowFolder.FolderName" value="@Model.SlideShowFolders[i].FolderName" checked="@(Model.SlideShowFolders[i].IsSelected == true ? "checked" : null)" />
                        @Model.SlideShowFolders[i].FolderName
                        <input type="hidden" asp-for="@Model.SlideShowFolders[i].FolderName" />
                        <input type="hidden" asp-for="@Model.SlideShowFolders[i].IsSelected" />
                    </li>
                }
            </ul>
            <span asp-validation-for="SelectedSlideShowFolder.FolderName" class="text-danger"></span>
        </div>
        <div class="max-width-200 mx-auto">
            <div>
                <button class="btn btn-primary mb-3 mt-3 w-100" type="submit">Edit Slideshow</button>
            </div>
            <div>
                <a asp-controller="MyHomePage" asp-action="Index" class="btn btn-outline-dark w-100">Back To Home Page</a>
            </div>
        </div>
    </form>

</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}