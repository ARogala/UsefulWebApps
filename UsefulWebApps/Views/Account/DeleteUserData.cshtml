@{
    ViewData["Title"] = "Delete User Data";
}

@model UsefulWebApps.IdentityModels.DeleteUserData

<div class="max-width-550 mx-auto container pb-3">
    <h1 class="display-3 mt-3 text-center">Delete User Data</h1>
    <p>
        This function will remove the user's saved data and set the author of their recipes to the admin who runs this function.
        This will prevent orphaned data in the data base and must be run before deleting the user.
    </p>
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-floating mb-3">
            <input type="text" asp-for="UserName" class="form-control" id="userNameInput" placeholder="User Name" />
            <label asp-for="UserName" for="userNameInput">User Name</label>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" asp-for="Email" class="form-control" id="emailInput" placeholder="Email" />
            <label asp-for="Email" for="emailInput">Email</label>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="text" asp-for="AdminUserName" class="form-control" id="adminUserNameInput" placeholder="Admin User Name" />
            <label asp-for="AdminUserName" for="adminUserNameInput">Admin User Name</label>
            <span class="text-danger" asp-validation-for="AdminUserName"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" asp-for="AdminEmail" class="form-control" id="adminEmailInput" placeholder="Admin Email" />
            <label asp-for="AdminEmail" for="adminEmailInput">Admin Email</label>
            <span class="text-danger" asp-validation-for="AdminEmail"></span>
        </div>

        <div class="max-width-175 mx-auto">
            <div>
                <button type="submit" class="btn btn-primary mb-3 w-100">Delete User Data</button>
            </div>
        </div>
    </form>
</div>