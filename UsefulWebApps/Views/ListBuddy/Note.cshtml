@{
    ViewData["Title"] = "Note";
}
@model UsefulWebApps.Models.ListBuddy.Notes

<div class="max-width-550 mx-auto">
    <h1 class="display-3 mt-3 text-center">@Model.NoteTitle</h1>
    <div class="card text-white bg-info mb-3">
         <div class="card-header">@Model.NoteTitle</div>
         <div class="card-body">
            @* https://stackoverflow.com/questions/498461/how-to-save-user-entered-line-breaks-from-a-textarea-to-a-database *@
            <notes html-notes-content="@Model.Note" class="card-text" style="white-space: pre-line"></notes>
         </div>
    </div>
    <div class="max-width-175 mx-auto">
        <a asp-controller="ListBuddy" asp-action="MyNotes" class="btn btn-outline-dark w-100">My Notes</a>
    </div>
</div>
